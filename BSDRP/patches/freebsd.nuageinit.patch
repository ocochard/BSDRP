+local function remount_root_rw()
+	local was_readonly = is_root_readonly()
+	if was_readonly then
+		local ret = os.execute("mount -uw /")
+		if not ret then
+			nuage.err("Failed to remount root filesystem read-write")
+		end
+	end
+	return was_readonly
+end
