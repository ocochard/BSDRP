+/* set the thread affinity
+   function from netmap/pkt-gen.c */
+static int
+setaffinity(pthread_t me, int i)
+{
+    cpuset_t cpumask;
+
+    if (i == -1)
+        return 0;
+
+    /* Set thread affinity affinity.*/
+    CPU_ZERO(&cpumask);
+    CPU_SET(i, &cpumask);
+	if (pthread_setaffinity_np(me, sizeof(cpuset_t), &cpumask) != 0) {
+        perror("Unable to set affinity");
+        return 1;
+    }
+    return 0;
+}
