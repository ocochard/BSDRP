+/* sysctl wrapper to return the number of active CPUs
+   function from netmap/pkt-gen.c */
+static int
+system_ncpus(void)
+{
+    int ncpus;
+    int mib[2] = { CTL_HW, HW_NCPU };
+    size_t len = sizeof(mib);
+    sysctl(mib, 2, &ncpus, &len, NULL, 0);
+    return (ncpus);
+}
