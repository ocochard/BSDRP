# Uncomment for enable the debug mode:
set -xv

# Stop the script automatically on error
set -e

# Get options passed by user
getoption () {
	FIRST_OPTION="$1"
	SECOND_OPTION="$2"
	THIRD_OPTION="$3"
	case "$FIRST_OPTION" in
		version)
			version
			;;
		route)
			route 
			;;
		process)
			process
			;;
		help)
			usage
			;;
		*)
			echo "illegal option: $FIRST_OPTION"
			usage
			;;
	esac
}

# Display help
usage () {
	echo "BSDRP show tool"
	case "$SECOND_OPTION" in
                route)
			echo "Options for route:"
	                echo " - ipv4 : Display only IPv4 routes"
			echo " - ipv6 : Display only IPv6 routes" 
			;;
		process)
			echo "Options for process:"
			echo " - cpu"
			echo " - memory"
			echo " - int"
			;;
		*)
# value $0 is the name of the called script
		echo "Usage: $0 option"
		echo "  - route    : Display routes"
		echo "  - process  : Display process information"
		echo "  - version  : Display BSDRP version"
		echo "  - help [option]  : Display this help message. "
		echo "		  	If [option] given, display more detail about"
			;;	
	esac	
	exit 0
}

# Display version
version () {
	cat /etc/BSDRP.version
	exit 0
}

# Display routes
route () {
	case "$SECOND_OPTION" in
                ipv4)
                       netstat -rn -f inet 
			;;
		ipv6)
			netstat -rn -f inet6	
			;;
		*)
		netstat -rn
		;;	
	esac
	exit 0
}

# Display process
process () {
        case "$SECOND_OPTION" in
                cpu)
                        top -b
                        ;;
                memory)
                        vmstat -h -m
                        ;;
		int)
			vmstat -h -i
			;;
                *)
			top -b
               		;;
        esac
        exit 0
}


###################
## Main function ##
###################

getoption $*
