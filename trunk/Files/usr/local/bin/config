# Uncomment for enable the debug mode:
#set -xv

getoption () {
	OPTION="$1"
	echo "debug: $OPTION"
	case "$OPTION" in
		save)
			save
			;;
		apply)
			apply 
			;;
		rollback)
			rollback
			;;
		put)
			put
			;;
		get)
			get
			;;
		help)
			usage
			;;
		*)
			echo "Bad command"
			usage
			;;
	esac
}

# Display help
usage () {
	echo "BSDRP config tools"
	echo "Usage: $0 option"
	echo "  save     : Save current config"
	echo "  apply    : Apply current config"
	echo "  rollback : Revert to previous config"
	echo "  put      : Put config to a remote server"
	echo "  get      : Get config from remote server"
	echo "  help     : Display this help message"
	exit 0
}
# save configuration
save () {
	echo "save configuration"
	echo "This function will save the configuration"
	echo "Old configuration files will be rotated tgz" 
	exit 0
}

# Apply configuration
apply () {
	echo "Apply configuration"
	echo "This function will test all changes"
	echo "and force process to use new configuration"
	exit 0
}

# Rollback to previous configuration
Rollback () {
	echo "Rollback to previous saved configuration"
	echo "And apply ???"
	exit 0
}

# Send configuration to an svn/cvs/scp server ?
put () {
	echo "Send configuration to an svn/cvs/scp server"
	exit 0
}

# Get configuration from an svn/cvs/scp server
get () {
	echo "Get configuration from an svn/cvs/scp server"
	exit 0
}

###################
## Main function ##
###################

getoption
