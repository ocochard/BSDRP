# Exit script if error meet
set -e

DEST_PART=1
# Set the NANO_DRIVE varible by starting this small script:
. /etc/nanobsd.conf
if mount | grep ${NANO_DRIVE}s$(DEST_PART) > /dev/null ; then
	DEST_PART=2
	if mount | grep ${NANO_DRIVE}s$(DEST_PART) > /dev/null ; then
		echo "Upgrade can't detect the non-active partition"
		exit 1
	fi
fi

# Blow away old system.
dd if=/dev/zero of=/dev/${NANO_DRIVE}s$(DEST_PART) bs=1m count=1 > /dev/null 2>&1

# Copy in new system
dd of=/dev/${NANO_DRIVE}s$(DEST_PART) obs=64k

# Check that it worked
fsck_ffs -n /dev/${NANO_DRIVE}s$(DEST_PART)a

boot0cfg -s $(DEST_PART) -v ${NANO_DRIVE}
